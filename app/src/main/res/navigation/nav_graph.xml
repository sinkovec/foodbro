<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/recipes_fragment_dest">

    <fragment
        android:id="@+id/recipes_fragment_dest"
        android:name="de.foodbro.app.ui.recipes.RecipesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_recipes">
        <action
            android:id="@+id/action_recipes_fragment_dest_to_recipeDetailFragment"
            app:destination="@id/recipe_detail_fragment_dest" />
        <action
            android:id="@+id/action_recipes_fragment_dest_to_edit_graph"
            app:destination="@id/edit_graph" />
    </fragment>
    <fragment
        android:id="@+id/recipe_detail_fragment_dest"
        android:name="de.foodbro.app.ui.detail.RecipeDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_recipe_detail">
        <argument
            android:name="recipeId"
            app:argType="de.foodbro.app.util.LongArg" />
        <action
            android:id="@+id/action_recipe_detail_fragment_dest_to_edit_graph"
            app:destination="@id/edit_graph" />

    </fragment>
    <navigation
        android:id="@+id/edit_graph"
        app:startDestination="@id/recipe_edit_fragment_dest">
        <argument
            android:name="recipeId"
            app:argType="de.foodbro.app.util.LongArg"
            app:nullable="true"
            android:defaultValue="@null" />
        <fragment
            android:id="@+id/recipe_edit_fragment_dest"
            android:name="de.foodbro.app.ui.edit.RecipeEditFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_recipe_edit">
            <action
                android:id="@+id/action_recipe_edit_fragment_dest_to_recipes_fragment_dest"
                app:destination="@id/recipes_fragment_dest" />
        </fragment>
        <fragment
            android:id="@+id/recipe_edit_summary_fragment_dest"
            android:name="de.foodbro.app.ui.edit.RecipeEditSummaryFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_recipe_edit_summary">
        </fragment>
        <fragment
            android:id="@+id/recipe_edit_ingredients_fragment_dest"
            android:name="de.foodbro.app.ui.edit.RecipeEditIngredientFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_recipe_edit_ingredient">
        </fragment>
        <fragment
            android:id="@+id/recipe_edit_preparation_fragment_dest"
            android:name="de.foodbro.app.ui.edit.RecipeEditPreparationFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_recipe_edit_preparation">
        </fragment>
    </navigation>
</navigation>